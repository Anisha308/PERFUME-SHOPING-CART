<!-- registrationForm.ejs -->
<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<title>RegistrationForm</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- MATERIAL DESIGN ICONIC FONT -->
	<link rel="stylesheet" href="fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

	<!-- STYLE CSS -->
	<link rel="stylesheet" href="css/style.css">
</head>

<body>
	<div class="wrapper" style="background-image: url('bg-registration-form-2.jpg');">
		<div class="inner">
			<!-- <form class="mx-1 mx-md-4" method="post" action=> -->
			<form action="/register" method="post">
				<h3>Registration Form</h3>

				<div class="form-wrapper">
					<input id="text-field" type="text" class="form-control" name="name" placeholder="Name:" required>
				</div>

				<div class="form-wrapper">
					<input id="text-field" type="text" class="form-control" name="email" placeholder="Email:" required>
				</div>
				<div class="form-wrapper">
					<input id="text-field" type="text" class="form-control" name="mobile" placeholder="Mobile:"
						required>
				</div>
				<div class="form-wrapper">
					<input id="password-field" type="password" class="form-control" name="password"
						placeholder="Password:" required>
				</div>
				<div class="form-wrapper">
					<input id="password-field" type="password" class="form-control" name="confirmPassword"
						placeholder="Confirm Password:" required>
				</div>
				<button>Register Now</button>

				<a href="/login" class="btn btn-success" role="button" style="color:aliceblue">Back to Login</a>
				<%=(typeof message!=='undefined' )?message:""%>
			</form>

		</div>

	</div>


</body>

</html>