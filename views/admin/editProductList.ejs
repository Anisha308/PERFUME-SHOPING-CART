<%- include('../layouts/adminHeader.ejs') %>

 <section class="content-main">
  <div class="row">
    <div class="col-9">
      <div class="content-header">
        <h2 class="content-title">Edit Products</h2>
      </div>
    </div>
    <div class="col-9">     
      <div class="card">
        <div class="card-body">
          <div class="row gx-5">
            <div class="col-lg-9">
              <section class="content-body p-xl-4">
                <form method="post" action='/updateProductList' enctype="multipart/form-data">
                  <div class="row mb-4">
                    <label class="col-lg-3 col-form-label">Product name*</label>
                    <div class="col-lg-9">
                      <input type="text" class="form-control" placeholder="Type here" name="name" value="<%= productData[0].name %>">
                      <input type="hidden" class="form-control" name="id" value="<%= productData[0]._id %>">
                    </div>
                  </div>
                  <div class="row mb-4">
                    <label class="col-lg-3 col-form-label">Description*</label>
                    <div class="col-lg-9">
                      <textarea class="form-control" placeholder="Type here" rows="4" name="description"><%= productData[0].description %></textarea>
                    </div>
                  </div>
                  <div class="row mb-4">
                    <label class="col-lg-3 col-form-label">Price</label>
                    <div class="col-lg-4">
                      <input type="number" class="form-control" placeholder="â‚¹0.00" name="price" value="<%= productData[0].price %>">
                    </div>
                  </div>
                  <div class="row mb-4">
                    <label class="col-lg-3 col-form-label">Category</label>
                    <div class="col-lg-9">
                      <select class="form-control" id="categoryDropdown" onchange="changeCategory(this.value)" name="category">
                        <!-- Render options for productCategory -->
                        <% productCategory.forEach(function(category) { %>
                          <option value="<%= category._id %>" <% if (productData[0].category.toString()===category._id.toString()) { %>selected<% } %>><%= category.name %></option>
                        <% }); %>
                        <!-- Render options for allCategory -->
                        <% allCategory.forEach(function(category) { %>
                          <option value="<%= category._id %>"><%= category.name %></option>
                        <% }); %>
                      </select>
                    </div>
                  </div>
                  <div class="row mb-4">
                    <label class="col-lg-3 col-form-label">Main Image</label>
                    <div class="col-lg-9">
                      <input type="file" class="form-control" name="image1">
                      <% if (productData[0].images[0]) { %>
                        <div class="left">
                          <img src="/uploads/<%= productData[0].images[0] %>" class="img-sm img-thumbnail" style="height: 80px; width: 80px;" alt="Item" data-bs-toggle="modal" data-bs-target="#imageModal<%= productData[0]._id %>">
                        </div>
                      <% } %>
                    </div>
                  </div>
                  <br>
                  <button class="btn btn-primary" type="submit">Update</button>
                </form>
              </section>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


    <%- include('../layouts/adminFooter.ejs') %>