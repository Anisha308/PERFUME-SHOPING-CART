<%- include('../layouts/adminHeader.ejs') %>



  


    <div class="row" style="padding-left: 100px;">
      <p class="users">Users Data</p>
      <div class="col-md-12">
        <div class="card">
          <div class="table-responsive pt-3">


            </table>

            <table class="table " style="width: 100%;">
              <thead class="thead-dark ">
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col ">Email</th>
                  <th scope="col">Mobile</th>
                  <th scope="col ">HouseName</th>
                  
                  <th scope="col ">pincode</th>
                  
<th scope="col ">District</th>
                  <th scope="col ">Status</th>
                  <th scope="col ">Action</th>
                </tr>
              </thead>
              <tbody>
                <% user.forEach((user)=> { %>
                  <tr>
                    <td>
                      <%= user.username %>
                    </td>
                    <td>
                      <%= user.email %>
                    </td>
                    <td>
                      <%= user.mobile %>
                    </td>
                    <%if(user.Address && user.Address.length>0){%>
                    <td><%=user.Address[0].HouseName%></td>
                    <td>
                      <%=user.Address[0].pincode%>
                    </td>
                    <td>
                      <%=user.Address[0].District%>
                    </td>
                  <%}%>
                    <% if (user.is_blocked==false) { %>
                      <td><span style="color: green;">Active</span></td>
                      <% } else { %>
                        <td><span style="color: red;">Blocked</span></td>
                        <% } %>
                          <td>

                            <div>

                              <% if (user.is_blocked==false) { %>
                                <a class="dropdown-item" href="/blockUser?id=<%= user._id %>">
                                  <button type="button" class="btn btn-outline-secondary">Block</button>

                                </a>
                                <% } else { %>
                                  <a class="dropdown-item" href="/unBlockUser?id=<%= user._id %>"></a>
                                  <button type="button" class="btn btn-outline-secondary">Unblock</button>
                                  <!-- Display the "Unblock" button -->
                                  </a>
                                  <% } %>
                            </div>
          </div>
          </td>
          </tr>
          <% }); %>
            <tr>

              </tbody>
              </table>


              </table>
        </div>
      </div>
    </div>
  </div>
  </form>


  <%- include('../layouts/adminFooter.ejs') %>